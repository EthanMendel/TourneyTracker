<html>
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    </head>
    <body>
        <form id="teamForm" method="POST">
            <input name="record" value="0-0" style="display: none;">
            <input name="tournament_id" value="{{tournament.id}}" style="display: none;">
            <div>
                <span>Team Name</span>
                <input name="name">
            </div>
            <div>
                <span>Pitcher</span>
                <input name="pitcher">
            </div>
            <div>
                <span>Catcher</span>
                <input name="catcher">
            </div>
            <div>
                <span>1st Base</span>
                <input name="base_1">
            </div>
            <div>
                <span>2nd Base</span>
                <input name="base_2">
            </div>
            <div>
                <span>Short Stop</span>
                <input name="short_stop">
            </div>
            <div>
                <span>3rd Base</span>
                <input name="base_3">
            </div>
            <div>
                <span>Right Field</span>
                <input name="right_field">
            </div>
            <div>
                <span>Center Field</span>
                <input name="center_field">
            </div>
            <div>
                <span>Left Field</span>
                <input name="left_field">
            </div>
            <button type="submit">Register</button>
        </form>
    </body>
</html>